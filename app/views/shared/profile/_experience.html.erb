<div class="mt-8 text-gray-500">
    <%= render 'shared/profile/item_with_description', 
        title: experience.company,
        subtitle: experience.position,
        start_date: experience.start,
        end_date: experience.end,
        description: experience.description
    %>
    <% if !experience.projects.none? && !experience.projects.first.title.nil? %>
        <h3 class="text-xl font-semibold mt-2">Projects:</h3>
        <%= render partial: 'shared/profile/project', collection: experience.projects %>   
    <% end %>
       

</div>